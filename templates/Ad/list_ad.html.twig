{% extends 'base.html.twig' %}

{% block title %} Our beautiful announcements {% endblock %}

{% block body %}
    <div class="container">
        <h2>Here is announcements of our hosts</h2>

        <div class="row">
            {% for ad in ads %}
                <div class="col-md-4">
                    <div class="card bg-light mb-3">
                        <div class="card-header text-center">
                            {{ ad.rooms }} rooms, <strong>{{ ad.price }}â‚¬ / night</strong> <br>
                            <small>Not Note</small>
                        </div>

                        <img src="{{ ad.coverImage }}" alt="Image de l'appartement"
                             style="height: 200px; width: 100%; display: block">

                        <div class="card-body">
                            <h4 class="card-title">
                                {{ ad.title }}
                            </h4>
                            <p class="card-text">
                                {{ ad.introduction }}
