{% extends 'base.html.twig' %}

{% block title %}Register the new announcement{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h2>Register new announcement</h2>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Register the new announcement</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _ad_create_images_widget %}
    <p>Here, add images</p>

    {{ form_widget(form) }}
    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">
            Add Image
        </button>
    </div>
{% endblock %}

{% block _ad_create_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_create_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('#add-image').click(function () {
            // Recover the number of field future created
            const index = $('#ad_create_images div.form-group').length;

            // Recover the prototype of entries
            const tmpl = $('#ad_create_images').data('prototype').replace(/__name__/g, index);

            // Inject this code in the div
            $('#ad_create_images').append(tmpl);

            // Manage the delete button
            handleDeleteButtons();
        });

        function handleDeleteButtons() {
            $('button[data-action="delete"]').click( function () {
                const target = this.dataset.target;
                $(target).remove()
            })
        }

        handleDeleteButtons()
    </script>
{% endblock %}